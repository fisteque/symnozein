<!DOCTYPE html>
<html lang="cs">
<head>
  <meta charset="UTF-8" />
  <title>Reinterpretace</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <style>
    body {
      font-family: sans-serif;
      max-width: 720px;
      margin: 2rem auto;
      padding: 1rem;
      background: #fafafa;
    }
    h1 {
      font-size: 2rem;
      margin-bottom: 1rem;
    }
    .mapitola {
      margin-bottom: 1.5rem;
    }
    .mapitola a {
      font-weight: bold;
      text-decoration: none;
      color: #222;
    }
    .mapitola .meta {
      font-size: 0.9rem;
      color: #666;
    }
    .mapitola .tags {
      font-size: 0.85rem;
      color: #999;
    }
  </style>
</head>
<body>
  <h1>ðŸŒ€ Reinterpretace â€“ pÅ™ehled mapitol</h1>
  <div id="mapitoly"></div>

  <script>
    fetch('13_index.json')
      .then(response => response.json())
      .then(data => {
        const container = document.getElementById('mapitoly');
        data.forEach(entry => {
          if (entry.hidden !== true) {
            const div = document.createElement('div');
            div.className = 'mapitola';

            const a = document.createElement('a');
            a.href = '13/' + entry.file;
            a.textContent = entry.title;
            div.appendChild(a);

            const meta = document.createElement('div');
            meta.className = 'meta';
            meta.textContent = entry.date;
            div.appendChild(meta);

            if (entry.tags && entry.tags.length > 0) {
              const tags = document.createElement('div');
              tags.className = 'tags';
              tags.textContent = '#' + entry.tags.join(' #');
              div.appendChild(tags);
            }

            if (entry.summary) {
              const summary = document.createElement('p');
              summary.textContent = entry.summary;
              div.appendChild(summary);
            }

            container.appendChild(div);
          }
        });
      });
  </script>
</body>
</html>
